{% extends 'base.html.twig' %}

{% block title %}Snacks index{% endblock %}

{% block body %}
    <h1>Snacks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for snack in snacks %}
            <tr>
                <td>{{ snack.id }}</td>
                <td>{{ snack.name }}</td>
                <td>{{ snack.type }}</td>
                <td>
                    <a href="{{ path('app_snacks_show', {'id': snack.id}) }}">show</a>
                    <a href="{{ path('app_snacks_edit', {'id': snack.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_snacks_new') }}">Create new</a>
{% endblock %}
